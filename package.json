{
    "name": "search-ui-extensions",
    "version": "1.0.0",
    "description": "Small generic components to extend the functionality of Coveo's Search UI framework.",
    "main": "index.js",
    "scripts": {
        "test": "karma start --single-run",
        "testCoverage": "npm run test && cat ./bin/coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js",
        "setup": "node setup.js",
        "build": "npm run setup && npm run css && webpack",
        "minimize": "webpack --minimize",
        "css": "node css.js",
        "dev": "node dev.server.js",
        "watchTest": "karma start",
        "lint": "prettier --write --single-quote --tab-width 4 src/**/*"
    },
    "pre-commit": [
        "lint"
    ],
    "keywords": [
        "coveo",
        "search",
        "ui",
        "framework",
        "js",
        "typescript",
        "jssearch",
        "jsui",
        "starter",
        "seed"
    ],
    "author": "Coveo <sandbox_JSUI@coveo.com> (http://source.coveo.com/)",
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/jasmine": "^3.3.9",
        "@types/node": "^11.11.3",
        "coveo-search-ui": "^2.5549.4",
        "coveo-search-ui-tests": "0.0.5",
        "coveralls": "^3.0.3",
        "istanbul-instrumenter-loader": "^3.0.1",
        "jasmine": "^3.3.1",
        "karma": "^4.0.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.5",
        "karma-jasmine": "^2.0.1",
        "karma-spec-reporter": "0.0.32",
        "karma-webpack": "^3.0.5",
        "ncp": "^2.0.0",
        "node-sass": "^4.11.0",
        "pre-commit": "^1.2.2",
        "prettier": "1.16.4",
        "raw-loader": "^1.0.0",
        "string-replace-webpack-plugin": "^0.1.3",
        "ts-loader": "^5.3.3",
        "typescript": "^3.3.0",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3",
        "webpack-dev-server": "^3.2.1"
    }
}
