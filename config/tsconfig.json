{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": ["es2015", "es2016", "dom", "es2018.promise"],
        "outDir": "../bin/es6",
        "declaration": true,
        "declarationDir": "../bin/typings",
        "typeRoots": ["../src/typings"],
        "types": ["jasmine", "coveo-search-ui", "coveo-search-ui-tests"]
    },
    "include": ["../src/**/*.ts", "../img/**/*.svg", "../src/**/*.json"],
    "exclude": ["node_modules"]
}
